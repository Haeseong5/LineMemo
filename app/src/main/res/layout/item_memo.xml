<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="5dp">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="4dp"
        android:gravity="center_vertical"
        android:background="@drawable/view_shape">
        <!-- icon -->
        <ImageView
            android:id="@+id/item_memo_iv_image"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginBottom="1dp"
            android:background="@color/colorMain"
            android:scaleType="centerCrop"/>

        <!-- title -->
        <TextView
            android:id="@+id/item_memo_tv_title"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/item_memo_iv_image"
            android:layout_alignBaseline="@+id/item_memo_iv_image"
            android:textColor="@android:color/black"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:textSize="18dp"
            android:maxLines="1"
            android:textStyle="bold"
            />

        <TextView
            android:id="@+id/item_memo_tv_content"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/item_memo_iv_image"
            android:layout_below="@+id/item_memo_tv_title"
            android:layout_alignBaseline="@+id/item_memo_iv_image"
            android:textColor="@android:color/black"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="2dp"
            android:maxLines="2"
            android:textSize="14dp" />
    </RelativeLayout>

</LinearLayout>